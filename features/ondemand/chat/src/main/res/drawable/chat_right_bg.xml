<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/std_16dp"
        android:height="@dimen/std_16dp"
        android:gravity="bottom|end">
        <rotate
            android:fromDegrees="45"
            android:pivotX="-30%"
            android:pivotY="70%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:width="@dimen/std_16dp"
                    android:height="@dimen/std_16dp" />
                <solid android:color="@color/white" />
            </shape>
        </rotate>
    </item>
    <item
        android:width="@dimen/std_16dp"
        android:height="@dimen/std_16dp"
        android:gravity="bottom|end">
        <rotate
            android:fromDegrees="45"
            android:pivotX="-30%"
            android:pivotY="70%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:width="@dimen/std_16dp"
                    android:height="@dimen/std_16dp" />
                <solid android:color="@color/colorPrimaryLightCard" />
            </shape>
        </rotate>
    </item>
    <item android:end="@dimen/std_8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomLeftRadius="@dimen/std_8dp"
                android:bottomRightRadius="@dimen/std_8dp"
                android:radius="@dimen/std_8dp"
                android:topLeftRadius="@dimen/std_8dp"
                android:topRightRadius="@dimen/std_8dp" />
        </shape>
    </item>
    <item android:end="@dimen/std_8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryLightCard" />

            <corners
                android:bottomLeftRadius="@dimen/std_8dp"
                android:bottomRightRadius="@dimen/std_8dp"
                android:radius="@dimen/std_8dp"
                android:topLeftRadius="@dimen/std_8dp"
                android:topRightRadius="@dimen/std_8dp" />
        </shape>
    </item>

</layer-list>
