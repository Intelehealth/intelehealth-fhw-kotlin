        android:supportsRtl="true"
        android:theme="@style/Theme.IDA"
        tools:targetApi="34" >
<!--        <activity-->
<!--            android:name=".ui.prescription.activity.PrescriptionActivity"-->
<!--            android:exported="false" />-->
        <activity
            android:name=".ui.onboarding.activity.OnboardingActivity"
            android:exported="true"
            android:theme="@style/Theme.IDA" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.activity.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".ui.aboutus.activity.AboutUsActivity"
