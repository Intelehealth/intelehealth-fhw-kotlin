<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="achievementScore"
            type="org.intelehealth.app.model.achievement.Achievement" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvFromToDates"
            style="@style/Theme.IDA.TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_16dp"
            android:text="@string/lbl_from"
            app:layout_constraintStart_toStartOf="@id/btnFromDate"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFromDate"
            style="@style/Theme.IDA.Button.Tertiary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_16dp"
            android:textColor="@color/colorTextSecondary"
            app:icon="@drawable/ic_calendar"
            app:iconPadding="@dimen/std_8dp"
            android:gravity="start|center_vertical"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/btnToDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFromToDates"
            tools:text="1 March, 2022" />

        <TextView
            android:id="@+id/tvToDates"
            style="@style/Theme.IDA.TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_16dp"
            android:text="@string/lbl_to"
            app:layout_constraintStart_toStartOf="@id/btnToDate"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToDate"
            style="@style/Theme.IDA.Button.Tertiary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_16dp"
            android:textColor="@color/colorTextSecondary"
            app:icon="@drawable/ic_calendar"
            app:iconPadding="@dimen/std_8dp"
            android:gravity="start|center_vertical"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/btnFromDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvToDates"
            tools:text="1 March, 2022" />

        <include
            android:id="@+id/contentAchievement"
            app:achievement="@{achievementScore}"
            layout="@layout/content_achievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnFromDate" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
