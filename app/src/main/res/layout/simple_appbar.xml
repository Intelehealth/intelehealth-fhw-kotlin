<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:theme="@style/Theme.IDA.AppBarOverlay"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:theme="@style/Theme.IDA.PopupOverlay"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:subtitle="@string/content_last_synced"
            app:subtitleTextAppearance="@style/Theme.IDA.TextAppearance.Label"
            app:title="@string/action_home"
            app:titleMarginStart="0dp"
            app:titleTextAppearance="@style/Theme.IDA.TextAppearance.ScreenTitle" />
    </com.google.android.material.appbar.AppBarLayout>
</layout>