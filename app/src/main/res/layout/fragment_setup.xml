<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/tv_setup"
            style="@style/Theme.IDA.Dark.TextAppearance.Heading1.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_16dp"
            android:gravity="start"
            android:text="@string/lbl_setup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivSetupIcon" />

        <TextView
            android:id="@+id/tv_setup_note"
            style="@style/Theme.IDA.Dark.TextAppearance.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_16dp"
            android:layout_marginTop="@dimen/std_8dp"
            android:gravity="start"
            android:text="@string/content_one_time_setup"
            app:layout_constraintBottom_toBottomOf="@id/ivSetupIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_setup" />

        <ImageView
            android:id="@+id/ivSetupIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_16dp"
            android:contentDescription="@string/lbl_setup"
            android:src="@drawable/ic_onboarding_setup"
            app:layout_constraintBottom_toTopOf="@id/clSetup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSetup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_rounded_white_bg"
            android:orientation="vertical"
            android:padding="@dimen/std_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/enterDetailsTV"
                style="@style/Theme.IDA.TextAppearance.ScreenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_24dp"
                android:text="@string/content_enter_following_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/setup_info_question_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/enterDetailsTV"
                android:contentDescription="@string/content_help"
                android:padding="@dimen/std_8dp"
                android:src="@drawable/ic_help_info"
                app:layout_constraintBottom_toBottomOf="@id/enterDetailsTV"
                app:layout_constraintStart_toEndOf="@id/enterDetailsTV"
                app:layout_constraintTop_toTopOf="@id/enterDetailsTV"
                app:tint="?attr/colorPrimary" />


            <TextView
                android:id="@+id/tvLblLocation"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_16dp"
                android:text="@string/lbl_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/enterDetailsTV" />

            <org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout
                android:id="@+id/textInputLocation"
                style="@style/Theme.IDA.OutlineInputBox.DropDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLblLocation">

                <AutoCompleteTextView
                    android:id="@+id/autotv_select_location"
                    style="@style/Theme.IDA.InputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_start_typing_location"
                    android:importantForAutofill="no"
                    android:inputType="none" />

            </org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout>

            <TextView
                android:id="@+id/tvLblUsername"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_16dp"
                android:text="@string/lbl_username"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLocation" />

            <org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout
                android:id="@+id/textInputLayoutUsername"
                style="@style/Theme.IDA.OutlineInputBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLblUsername">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputUsername"
                    style="@style/Theme.IDA.InputBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_enter_username" />

            </org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout>

            <TextView
                android:id="@+id/tvForgotUsername"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_8dp"
                android:gravity="end"
                android:text="@string/action_forgot_username"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLayoutUsername" />

            <TextView
                android:id="@+id/tvLblPassword"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_16dp"
                android:text="@string/lbl_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvForgotUsername" />

            <org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout
                android:id="@+id/textInputLayoutPassword"
                style="@style/Theme.IDA.OutlineInputBox.Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvLblPassword">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textInputPassword"
                    style="@style/Theme.IDA.InputBox.Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_enter_password" />

            </org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout>

            <TextView
                android:id="@+id/tvForgotPassword"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_8dp"
                android:gravity="end"
                android:text="@string/action_forgot_password"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textInputLayoutPassword" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetup"
                style="@style/Theme.IDA.Button.Next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_64dp"
                android:text="@string/action_setup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>