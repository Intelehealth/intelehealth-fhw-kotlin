<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isLocationEnabled"
            type="Boolean" />

        <variable
            name="btnLbl"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_rounded_white"
        android:orientation="vertical"
        android:padding="@dimen/std_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvInstructionDetails"
            style="@style/Theme.IDA.TextAppearance.ScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_24dp"
            android:contentDescription="@string/content_enter_following_details"
            android:drawablePadding="@dimen/std_8dp"
            android:text="@string/content_enter_following_details"
            app:drawableEndCompat="@drawable/ic_help_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{isLocationEnabled ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="tvLblLocation, textInputLocation" />

        <TextView
            android:id="@+id/tvLblLocation"
            style="@style/Theme.IDA.TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_16dp"
            android:contentDescription="@string/lbl_location"
            android:text="@string/lbl_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInstructionDetails" />

        <org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout
            android:id="@+id/textInputLocation"
            style="@style/Theme.IDA.OutlineInputBox.DropDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_location_dropdown"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLblLocation">

            <AutoCompleteTextView
                android:id="@+id/autotv_select_location"
                style="@style/Theme.IDA.InputBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_start_typing_location"
                android:importantForAutofill="no"
                android:inputType="none" />

        </org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout>

        <TextView
            android:id="@+id/tvLblUsername"
            style="@style/Theme.IDA.TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_16dp"
            android:contentDescription="@string/lbl_username"
            android:text="@string/lbl_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLocation" />

        <org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout
            android:id="@+id/textInputLayoutUsername"
            style="@style/Theme.IDA.OutlineInputBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hint_enter_username"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLblUsername">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputUsername"
                style="@style/Theme.IDA.InputBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_enter_username" />

        </org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout>

        <TextView
            android:id="@+id/tvForgotUsername"
            style="@style/Theme.IDA.TextAppearance.Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_8dp"
            android:contentDescription="@string/action_forgot_username"
            android:gravity="end"
            android:text="@string/action_forgot_username"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutUsername" />

        <TextView
            android:id="@+id/tvLblPassword"
            style="@style/Theme.IDA.TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_16dp"
            android:contentDescription="@string/lbl_password"
            android:text="@string/lbl_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvForgotUsername" />

        <org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout
            android:id="@+id/textInputLayoutPassword"
            style="@style/Theme.IDA.OutlineInputBox.Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hint_enter_password"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLblPassword">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputPassword"
                style="@style/Theme.IDA.InputBox.Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_enter_password" />

        </org.intelehealth.common.ui.custom.RightAlignErrorTextInputLayout>

        <TextView
            android:id="@+id/tvForgotPassword"
            style="@style/Theme.IDA.TextAppearance.Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_8dp"
            android:contentDescription="@string/action_forgot_password"
            android:gravity="end"
            android:text="@string/action_forgot_password"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutPassword" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSetup"
            style="@style/Theme.IDA.Button.Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_64dp"
            android:contentDescription="@{btnLbl}"
            android:text="@{btnLbl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvForgotPassword"
            tools:text="@string/action_setup" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
