<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/testCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/std_16dp"
    app:cardCornerRadius="@dimen/std_4dp"
    app:cardElevation="@dimen/std_4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/testIcon"
            android:layout_width="@dimen/std_48dp"
            android:layout_height="@dimen/std_48dp"
            android:src="@drawable/ic_circle_test"
            android:layout_margin="@dimen/std_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/lbl_test"
            />

        <TextView
            android:id="@+id/adviceTitle"
            style="@style/TextAppearance.Material3.TitleLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/std_8dp"
            android:layout_marginEnd="@dimen/std_8dp"
            android:text="@string/lbl_test"
            app:layout_constraintBottom_toBottomOf="@+id/testIcon"
            app:layout_constraintEnd_toStartOf="@+id/expandBtn"
            app:layout_constraintStart_toEndOf="@+id/testIcon"
            app:layout_constraintTop_toTopOf="@+id/testIcon" />

        <ImageButton
            android:id="@+id/expandBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_16dp"
            android:background="@null"
            android:src="@drawable/ic_cupertino_down"
            app:layout_constraintBottom_toBottomOf="@+id/adviceTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/adviceTitle"
            android:contentDescription="@string/lbl_expand"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/testInfoInfoExpandableLayoutGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="divider, testTv"
            />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/std_32dp"
            android:layout_marginStart="@dimen/std_16dp"
            android:layout_marginEnd="@dimen/std_16dp"
            android:layout_marginBottom="@dimen/std_16dp"
            android:background="@color/colorLightGray"
            app:layout_constraintTop_toBottomOf="@id/adviceTitle"/>


        <TextView
            android:id="@+id/testTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_16dp"
            android:text="@string/lbl_no_information"
            style="@style/Theme.IDA.TextAppearance.Secondary.Medium"
            app:drawableStartCompat="@drawable/shape_bullet_gray"
            android:drawablePadding="@dimen/std_4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>