<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/visitReceivedCardHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/std_4dp"
    app:cardCornerRadius="@dimen/std_8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/std_16dp"
        android:paddingTop="@dimen/std_16dp"
        android:paddingEnd="@dimen/std_16dp"
        android:paddingBottom="@dimen/std_16dp">

        <ImageView
            android:id="@+id/iconVisitDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/std_16dp"
            android:background="@null"
            android:src="@drawable/ic_circle_visit_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/receivedEndVisitNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/std_16dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="@string/content_patients_waiting_for_closure"
            style="@style/Theme.IDA.TextAppearance.Primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iconArrowRight"
            app:layout_constraintStart_toEndOf="@id/iconVisitDetails"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/iconArrowRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_cupertino_arrow_right"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
