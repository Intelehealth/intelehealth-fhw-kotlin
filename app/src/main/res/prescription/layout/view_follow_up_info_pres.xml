<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:visibility="visible">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_1dp"
        android:background="@color/colorLightGray"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvFollowUpDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/std_8dp"
        android:gravity="center_vertical"
        android:text="@string/lbl_follow_up_on"
        android:textAppearance="@style/Theme.IDA.TextAppearance.Body.Bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/tvFollowUpContent"
        app:layout_constraintEnd_toStartOf="@+id/materialButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/followup_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_4dp"
        android:gravity="center_vertical"
        android:text="@string/content_follow_up_date_arrived"
        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFollowUpDate" />

    <Button
        android:id="@+id/btnStartFollowUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_16dp"
        android:layout_marginBottom="@dimen/std_16dp"
        android:background="@drawable/ic_followup_enabled"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/followup_info" />

    <TextView
        android:id="@+id/tvFollowUpContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_16dp"
        android:gravity="center_vertical"
        android:text="@string/content_followup_visit_info"
        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialButton" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        style="@style/Theme.IDA.Button.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_16dp"
        android:layout_marginEnd="@dimen/std_16dp"
        android:padding="@dimen/std_16dp"
        android:text="@string/action_no"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvFollowUpContent"
        app:layout_constraintEnd_toStartOf="@+id/yes_followup_btn"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yes_followup_btn"
        style="@style/Theme.IDA.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/std_16dp"
        android:text="@string/action_yes"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/materialButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
