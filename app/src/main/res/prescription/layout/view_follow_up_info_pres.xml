<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="visible"
    tools:visibility="visible">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/std_16dp"
            android:background="@color/colorLightGray" />


    <TextView
        android:id="@+id/followupDateTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/std_10dp"
        android:text="@string/lbl_card_item_date"
        android:textAppearance="@style/Theme.IDA.TextAppearance.Body.Bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/followup_accept_text"
        app:layout_constraintEnd_toStartOf="@+id/materialButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/followup_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/std_4dp"
        app:layout_constraintTop_toBottomOf="@id/followupDateTv"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/content_followup_info"
        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
        android:textColor="@null" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/followup_info"
        android:layout_below="@+id/followup_info"
        android:layout_marginTop="@dimen/std_12dp"
        android:layout_marginBottom="@dimen/std_16dp"
        android:background="@drawable/ic_followup_enabled" />

    <TextView
        android:id="@+id/followup_accept_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/std_12dp"
        android:text="@string/content_followup_visit_info"
        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
        android:layout_marginTop="@dimen/std_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialButton" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton"
        style="@style/Theme.IDA.Button.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/std_15dp"
        android:padding="@dimen/std_12dp"
        android:text="@string/action_no"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/followup_accept_text"
        app:layout_constraintEnd_toStartOf="@+id/yes_followup_btn"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yes_followup_btn"
        style="@style/Theme.IDA.Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/std_12dp"
        android:text="@string/action_yes"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/materialButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialButton" />

</androidx.constraintlayout.widget.ConstraintLayout>