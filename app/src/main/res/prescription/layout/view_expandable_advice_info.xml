<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/diagnosisCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/std_16dp"
    app:cardCornerRadius="@dimen/std_4dp"
    app:cardElevation="@dimen/std_4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/std_16dp">

        <ImageView
            android:id="@+id/adviceIcon"
            android:layout_width="@dimen/std_48dp"
            android:layout_height="@dimen/std_48dp"
            android:contentDescription="@string/lbl_advice"
            android:src="@drawable/ic_med_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adviceTitle"
            style="@style/Theme.IDA.TextAppearance.Body.Bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/std_8dp"
            android:layout_marginEnd="@dimen/std_8dp"
            android:text="@string/lbl_advice"
            app:layout_constraintBottom_toBottomOf="@+id/adviceIcon"
            app:layout_constraintEnd_toStartOf="@+id/ivBtnExpandPatientDetails"
            app:layout_constraintStart_toEndOf="@+id/adviceIcon"
            app:layout_constraintTop_toTopOf="@+id/adviceIcon" />

        <ImageButton
            android:id="@+id/ivBtnExpandPatientDetails"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/std_48dp"
            android:background="@drawable/bg_ripple_icon"
            android:contentDescription="@string/lbl_expand"
            android:src="@drawable/ic_cupertino_down"
            app:layout_constraintBottom_toBottomOf="@+id/adviceTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/adviceTitle" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/drInfoInfoExpandableLayoutGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="divider, adviceTv" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/std_16dp"
            android:background="@color/colorLightGray"
            app:layout_constraintTop_toBottomOf="@id/ivBtnExpandPatientDetails" />


        <TextView
            android:id="@+id/adviceTv"
            style="@style/Theme.IDA.TextAppearance.Secondary.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/std_4dp"
            android:text="@string/lbl_no_information"
            android:layout_marginTop="@dimen/std_16dp"
            app:drawableStartCompat="@drawable/shape_bullet_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
