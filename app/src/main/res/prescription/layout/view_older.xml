<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="isListEmpty"
            type="java.lang.Boolean"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/olderTitleTv"
            style="@style/Theme.IDA.TextAppearance.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="@dimen/std_4dp"
            android:text="@string/lbl_older_visits"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/noDataFoundTv"
            style="@style/Theme.IDA.TextAppearance.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_32dp"
            android:gravity="center"
            android:padding="@dimen/std_4dp"
            android:text="@string/error_no_visit_found"
            android:visibility="@{isListEmpty ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/olderTitleTv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/olderRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="@dimen/std_4dp"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/olderTitleTv"
            tools:itemCount="2"
            tools:listitem="@layout/notification_list_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>