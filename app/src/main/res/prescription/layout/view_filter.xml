<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/std_16dp"
    android:paddingBottom="@dimen/std_8dp"
    android:visibility="gone"
    tools:visibility="visible">


    <TextView
        android:id="@+id/filter_header"
        style="@style/Theme.IDA.TextAppearance.Primary.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_results_for"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        style="@style/Theme.IDA.Chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_priority_visits"
        app:closeIconEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_header" />

</androidx.constraintlayout.widget.ConstraintLayout>
