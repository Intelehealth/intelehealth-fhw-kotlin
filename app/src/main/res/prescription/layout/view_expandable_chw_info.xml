<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chwDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/std_16dp"
        app:cardCornerRadius="@dimen/std_4dp"
        app:cardElevation="@dimen/std_4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/std_16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/std_40dp"
                android:layout_height="@dimen/std_40dp"
                android:contentDescription="@string/lbl_profile_image"
                android:src="@drawable/img_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <TextView
                android:id="@+id/tvPatientName"
                style="@style/Theme.IDA.TextAppearance.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_16dp"
                android:maxLines="1"
                android:text="@string/lbl_dummy_name"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toTopOf="@+id/profile_image" />

            <TextView
                android:id="@+id/tvPatientAgeAndGender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/std_16dp"
                android:text="@string/lbl_gender_with_age"
                android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
                app:layout_constraintBottom_toBottomOf="@+id/tvPatientName"
                app:layout_constraintStart_toEndOf="@+id/tvPatientName"
                app:layout_constraintTop_toTopOf="@+id/tvPatientName" />


            <ImageView
                android:id="@+id/ivEditPatientDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_ripple_icon"
                android:contentDescription="@string/lbl_edit"
                android:padding="@dimen/std_8dp"
                android:src="@drawable/ic_patient_edit"
                app:layout_constraintBottom_toBottomOf="@+id/tvPatientAgeAndGender"
                app:layout_constraintStart_toEndOf="@+id/tvPatientAgeAndGender"
                app:layout_constraintTop_toTopOf="@+id/tvPatientAgeAndGender" />


            <TextView
                android:id="@+id/openMrsIdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_openmrs_id"
                android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                app:layout_constraintStart_toStartOf="@id/tvPatientName"
                app:layout_constraintTop_toBottomOf="@+id/tvPatientName" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivBtnExpandPatientDetails"
                style="@style/Theme.IDA.TextButton.DropDown"
                android:layout_width="@dimen/std_40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_icon"
                android:contentDescription="@string/lbl_expand"
                android:paddingHorizontal="0dp"
                app:layout_constraintBottom_toTopOf="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/chwInfoExpandableLayoutGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="divider, tableLayoutCHWDetails" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/std_8dp"
                android:background="@color/colorLightGray"
                app:layout_constraintTop_toBottomOf="@id/ivBtnExpandPatientDetails" />


            <TableLayout
                android:id="@+id/tableLayoutCHWDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginTop="@dimen/std_16dp"
                android:shrinkColumns="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/divider"
                app:layout_constraintStart_toStartOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:drawablePadding="5dp"
                        android:text="@{@string/lbl_chw_worker + `:`}"
                        tools:text="@string/lbl_chw_worker" />

                    <TextView
                        android:id="@+id/chw_details"
                        style="@style/Theme.IDA.TextAppearance.Primary.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        tools:text="@string/lbl_chw_worker" />
                </TableRow>

                <!--Gender-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:layout_weight="2">

                    <TextView
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="0.8"
                        android:text="@{@string/lbl_visit_id + `:`}"
                        tools:text="@string/lbl_visit_id" />

                    <TextView
                        android:id="@+id/tvVisitId"
                        style="@style/Theme.IDA.TextAppearance.Primary.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/lbl_dummy_visit_id"
                        android:textColor="@color/black" />
                </TableRow>
            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
