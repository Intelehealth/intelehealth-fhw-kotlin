<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- You can add all acco -->
    <TextView
        android:id="@+id/you_can_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:lineSpacingExtra="3sp"
        android:text="@string/title_recent_visit"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textSize="@dimen/std_14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Frame 100314 -->
    <TextView
        android:id="@+id/recent_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/std_5dp"
        android:text="@string/error_no_visit_found"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@null"
        android:textSize="@dimen/std_14sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/you_can_add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:padding="@dimen/std_5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent_nodata"
        tools:itemCount="2"
        tools:listitem="@layout/prescription_list_item" />
</androidx.constraintlayout.widget.ConstraintLayout>