<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/referredSpCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/std_16dp"
    app:cardCornerRadius="@dimen/std_5dp"
    app:cardElevation="@dimen/std_5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/testIcon"
            android:layout_width="@dimen/std_44dp"
            android:layout_height="@dimen/std_44dp"
            android:src="@drawable/dr_details_icon"
            android:layout_margin="@dimen/std_15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/adviceTitle"
            style="@style/Theme.IDA.Dialog.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/std_10dp"
            android:layout_marginEnd="@dimen/std_10dp"
            android:text="@string/lbl_referred_sp"
            app:layout_constraintBottom_toBottomOf="@+id/testIcon"
            app:layout_constraintEnd_toStartOf="@+id/expandBtn"
            app:layout_constraintStart_toEndOf="@+id/testIcon"
            app:layout_constraintTop_toTopOf="@+id/testIcon" />

        <ImageButton
            android:id="@+id/expandBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:src="@drawable/ui2_ic_chevron_down"
            app:layout_constraintBottom_toBottomOf="@+id/adviceTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/adviceTitle" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/referredSpExpandableLayoutGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="divider, referredSpTv"
            />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/std_32dp"
            android:layout_marginStart="@dimen/std_12dp"
            android:layout_marginEnd="@dimen/std_12dp"
            android:layout_marginBottom="@dimen/std_12dp"
            android:background="@color/colorLightGray"
            app:layout_constraintTop_toBottomOf="@id/adviceTitle"/>


        <TextView
            android:id="@+id/referredSpTv"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/std_12dp"
            android:text="@string/lbl_no_information"
            android:textColor="@color/black"
            android:textSize="@dimen/std_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:layout_editor_absoluteX="12dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>