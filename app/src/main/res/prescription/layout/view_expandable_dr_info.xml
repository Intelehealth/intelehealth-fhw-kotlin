<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/doctorDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/std_16dp"
        app:cardCornerRadius="@dimen/std_4dp"
        app:cardElevation="@dimen/std_4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/std_16dp">

            <ImageView
                android:id="@+id/ivDoctorDetailsIcon"
                android:layout_width="@dimen/std_48dp"
                android:layout_height="@dimen/std_48dp"
                android:contentDescription="@string/lbl_consulted_doctor_details"
                android:src="@drawable/ic_dr_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDoctorDetailsTitle"
                style="@style/Theme.IDA.TextAppearance.Body.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_16dp"
                android:layout_marginEnd="@dimen/std_8dp"
                android:text="@string/lbl_consulted_doctor_details"
                app:layout_constraintBottom_toBottomOf="@+id/ivDoctorDetailsIcon"
                app:layout_constraintEnd_toStartOf="@+id/ivBtnExpandPatientDetails"
                app:layout_constraintStart_toEndOf="@+id/ivDoctorDetailsIcon"
                app:layout_constraintTop_toTopOf="@+id/ivDoctorDetailsIcon" />

            <ImageButton
                android:id="@+id/ivBtnExpandPatientDetails"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/std_48dp"
                android:background="@null"
                android:contentDescription="@string/lbl_expand"
                android:src="@drawable/ic_cupertino_down"
                app:layout_constraintBottom_toBottomOf="@+id/tvDoctorDetailsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvDoctorDetailsTitle" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/drInfoInfoExpandableLayoutGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="divider, lblDetails, tableLayoutCHWDetails" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/std_16dp"
                android:background="@color/colorLightGray"
                app:layout_constraintTop_toBottomOf="@id/ivBtnExpandPatientDetails" />

            <TextView
                android:id="@+id/lblDetails"
                style="@style/Theme.IDA.TextAppearance.Primary.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_16dp"
                android:text="@string/lbl_details"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />


            <TableLayout
                android:id="@+id/tableLayoutCHWDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_8dp"
                android:shrinkColumns="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblDetails"
                tools:layout_editor_absoluteX="12dp">

                <!--Name-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@{@string/lbl_name + `:`}"
                        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
                        tools:text="@string/lbl_name" />

                    <TextView
                        android:id="@+id/drNameTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/lbl_no_information"
                        android:textAppearance="@style/Theme.IDA.TextAppearance.Primary.Label" />
                </TableRow>

                <!--Age -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:layout_weight="2"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/lblAge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@{@string/lbl_age + `:`}"
                        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
                        tools:text="@string/lbl_age" />

                    <TextView
                        android:id="@+id/dr_age_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/lbl_no_information"
                        android:textAppearance="@style/Theme.IDA.TextAppearance.Primary.Label" />
                </TableRow>

                <!--Qualification-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/lblQualification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@{@string/lbl_qualification + `:`}"
                        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
                        tools:text="@string/lbl_qualification" />

                    <TextView
                        android:id="@+id/qualification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/lbl_no_information"
                        android:textAppearance="@style/Theme.IDA.TextAppearance.Primary.Label" />
                </TableRow>

                <!--Speciality-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:layout_weight="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="@string/lbl_speciality"
                        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
                        tools:text="@string/lbl_speciality" />

                    <TextView
                        android:id="@+id/tvDrSpeciality"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@string/lbl_no_information"
                        android:textAppearance="@style/Theme.IDA.TextAppearance.Primary.Label" />
                </TableRow>

            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
