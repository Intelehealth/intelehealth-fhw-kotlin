<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="visitDetail"
            type="org.intelehealth.data.offline.entity.VisitDetail" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chwDetailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/std_4dp"
        app:cardElevation="@dimen/std_2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/patientInfo"
                layout="@layout/view_patient_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:patientDetail="@{visitDetail}" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/ivBtnExpandPatientDetails"
                style="@style/Theme.IDA.TextButton.DropDown"
                android:layout_width="@dimen/std_48dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_icon"
                android:contentDescription="@string/lbl_expand"
                app:iconGravity="textTop"
                app:layout_constraintBottom_toTopOf="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/chwInfoExpandableLayoutGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="divider, tableLayoutCHWDetails" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/std_16dp"
                android:background="@color/colorLightGray"
                app:layout_constraintTop_toBottomOf="@id/patientInfo" />

            <TableLayout
                android:id="@+id/tableLayoutCHWDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:padding="@dimen/std_16dp"
                android:shrinkColumns="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/divider"
                app:layout_constraintStart_toStartOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:drawablePadding="5dp"
                        android:text="@{@string/lbl_chw_worker + `:`}"
                        tools:text="@string/lbl_chw_worker" />

                    <TextView
                        android:id="@+id/chw_details"
                        style="@style/Theme.IDA.TextAppearance.Primary.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        tools:text="@string/lbl_chw_worker" />
                </TableRow>

                <!--Gender-->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:layout_weight="2">

                    <TextView
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_weight="0.8"
                        android:text="@{@string/lbl_column_visit_id + `:`}"
                        tools:text="@string/lbl_column_visit_id" />

                    <TextView
                        android:id="@+id/tvVisitId"
                        style="@style/Theme.IDA.TextAppearance.Primary.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@{visitDetail.hiddenVisitId()}"
                        android:textColor="@color/black" />
                </TableRow>
            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
