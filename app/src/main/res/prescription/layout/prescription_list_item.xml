<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="prescription"
            type="org.intelehealth.data.offline.entity.Prescription" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/std_8dp"
        app:cardElevation="@dimen/std_2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/std_16dp"
            android:paddingTop="@dimen/std_16dp"
            android:paddingBottom="@dimen/std_4dp">

            <!-- Profile Image Card -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sivProfileImage"
                android:layout_width="@dimen/std_40dp"
                android:layout_height="@dimen/std_40dp"
                android:contentDescription="@string/lbl_profile_image"
                android:src="@drawable/img_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <!-- Patient Name and Priority -->
            <TextView
                android:id="@+id/tvPatientName"
                style="@style/Theme.IDA.TextAppearance.Person.Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{@string/title_name(prescription.firstName, prescription.lastName)}"
                app:layout_constraintStart_toEndOf="@id/sivProfileImage"
                app:layout_constraintTop_toTopOf="@id/sivProfileImage"
                tools:text="@string/lbl_dummy_name" />

            <!-- Calendar and Date -->
            <TextView
                android:id="@+id/tvVisitStartDate"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_8dp"
                android:layout_marginTop="@dimen/std_4dp"
                android:drawablePadding="@dimen/std_8dp"
                android:gravity="center"
                android:text="@{prescription.visitStartDate}"
                app:drawableStartCompat="@drawable/ic_followup_calendar"
                app:drawableTint="@color/colorTextSecondary"
                app:layout_constraintStart_toEndOf="@id/sivProfileImage"
                app:layout_constraintTop_toBottomOf="@id/tvPatientName"
                tools:text="@string/lbl_card_item_date" />

            <TextView
                android:id="@+id/tvPriorityTag"
                style="@style/Theme.IDA.Dark.TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_priority"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:text="@string/title_priority"
                android:textAllCaps="true"
                android:textSize="@dimen/std_12sp"
                android:visibility="@{prescription.priority ? View.VISIBLE: View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPersonGender"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/std_4dp"
                android:text="@{prescription.gender}"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPriorityTag"
                tools:ignore="RtlSymmetry"
                tools:text="@string/lbl_gender_with_age" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSharePrescription"
                style="@style/Theme.IDA.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/std_36dp"
                android:layout_marginEnd="-8dp"
                android:text="@string/action_share"
                app:icon="@drawable/ic_prescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPersonGender" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
