<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="patient"
            type="org.intelehealth.data.offline.entity.Patient" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/std_5dp"
        android:layout_marginTop="@dimen/std_5dp"
        android:layout_marginBottom="@dimen/std_24dp"
        app:cardCornerRadius="@dimen/std_10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/std_12dp">

            <!-- Profile Image Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileImageCv"
                android:layout_width="@dimen/std_40dp"
                android:layout_height="@dimen/std_40dp"
                android:layout_margin="@dimen/std_2dp"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/std_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="@dimen/std_40dp"
                    android:layout_height="@dimen/std_40dp"
                    android:contentDescription="@string/lbl_profile_image"
                    android:src="@drawable/img_avatar" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Main Content Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_content_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profileImageCv"
                app:layout_constraintTop_toTopOf="@id/profileImageCv">

                <!-- Patient Name and Priority -->
                <TextView
                    android:id="@+id/patientNameTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="3sp"
                    android:maxLines="1"
                    android:text="@{@string/title_name(patient.firstName, patient.middleName, patient.lastName)}"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@null"
                    android:textSize="@dimen/std_16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/lbl_dummy_name" />



                <!-- Calendar and Date -->
                <TextView
                    android:id="@+id/dateTv"
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_5dp"
                    android:gravity="center"
                    app:drawableStartCompat="@drawable/ic_followup_calendar"
                    android:textColor="@color/colorTextSecondary"
                    android:drawablePadding="@dimen/std_5dp"
                    android:text="@string/lbl_card_item_date"
                    app:drawableTint="@color/colorTextSecondary"
                    app:layout_constraintStart_toStartOf="@+id/patientNameTv"
                    app:layout_constraintTop_toBottomOf="@id/patientNameTv"/>

                <TextView
                    android:id="@+id/priorityTagTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/ic_priority"
                    android:lineSpacingExtra="0sp"
                    android:text="@string/title_priority"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/std_10sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/genderTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/std_5dp"
                    android:text="@string/lbl_gender_with_age"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@null"
                    android:textSize="@dimen/std_16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/priorityTagTv"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/shareTv"
                    style="@style/Theme.IDA.TextAppearance.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbl_share"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/std_14sp"
                    app:drawableStartCompat="@drawable/ic_prescription"
                    app:drawableTint="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/genderTv"
                    app:layout_constraintTop_toBottomOf="@+id/genderTv"
                    app:layout_constraintVertical_bias="1.0"
                    app:strokeColor="@color/white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>