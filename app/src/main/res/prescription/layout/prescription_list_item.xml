<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="prescription"
            type="org.intelehealth.data.offline.entity.VisitDetail" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPatientItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/std_8dp"
        app:cardElevation="@dimen/std_2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@{prescription.hasPrescription ? @dimen/std_4dp : @dimen/std_16dp}"
            tools:paddingBottom="@dimen/std_4dp">

            <include
                android:id="@+id/patientCard"
                layout="@layout/view_patient_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:patient="@{prescription}" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSharePrescription"
                style="@style/Theme.IDA.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/std_36dp"
                android:layout_marginEnd="8dp"
                android:text="@string/action_share"
                android:visibility="@{prescription.hasPrescription ? View.VISIBLE : View.GONE}"
                app:icon="@drawable/ic_prescription"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/patientCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
