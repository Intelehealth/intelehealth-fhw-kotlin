<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fu_cardview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/std_5dp"
    android:layout_marginTop="@dimen/std_5dp"
    android:layout_marginBottom="@dimen/std_24dp"
    app:cardCornerRadius="@dimen/std_10dp"
    app:cardElevation="@dimen/std_5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/std_12dp">

        <!-- Profile Image Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fu_profile_imgv"
            android:layout_width="@dimen/std_40dp"
            android:layout_height="@dimen/std_40dp"
            android:layout_margin="@dimen/std_2dp"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/std_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/std_40dp"
                android:layout_height="@dimen/std_40dp"
                android:src="@drawable/avatar1" />
        </androidx.cardview.widget.CardView>

        <!-- Main Content Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_content_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_12dp"
            app:layout_constraintEnd_toStartOf="@+id/linear_icon"
            app:layout_constraintStart_toEndOf="@id/fu_profile_imgv"
            app:layout_constraintTop_toTopOf="@id/fu_profile_imgv">

            <!-- Patient Name and Priority -->
            <TextView
                android:id="@+id/fu_patname_txtview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3sp"
                android:maxLines="1"
                android:text="@string/title_fu_item"
                android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
                android:textColor="@null"
                android:textSize="@dimen/std_16dp"
                app:layout_constraintEnd_toStartOf="@+id/fl_priority"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/fl_priority"
                android:layout_width="@dimen/std_60dp"
                android:layout_height="@dimen/std_20dp"
                android:layout_marginStart="@dimen/std_4dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/llPriorityTagFollowUpListItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_marginEnd="@dimen/std_12dp"
                    android:background="@drawable/frame_priority"
                    android:contentDescription="@string/content_follow_up_list_item_priority_tag"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/fu_priority_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/title_priority"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/std_10sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="0sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- Calendar and Date -->
            <ImageView
                android:id="@+id/fu_item_calendar"
                android:layout_width="@dimen/std_16dp"
                android:layout_height="@dimen/std_16dp"
                android:layout_marginTop="@dimen/std_6dp"
                android:layout_marginEnd="@dimen/std_4dp"
                android:src="@drawable/followup_item_calendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fu_patname_txtview" />

            <TextView
                android:id="@+id/fu_date_txtview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_4dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="3sp"
                android:text="@string/lbl_card_item_date"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="@null"
                android:textSize="@dimen/std_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/fu_item_calendar"
                app:layout_constraintTop_toBottomOf="@id/fu_patname_txtview" />

            <!-- End Visit Button -->
            <Button
                android:id="@+id/end_visit_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/std_8dp"
                android:background="@drawable/bg_end_visit"
                android:fontFamily="@font/lato_regular"
                android:paddingHorizontal="10dp"
                android:text="@string/lbl_close_visit"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fu_date_txtview"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Right Side Icons -->
        <LinearLayout
            android:id="@+id/linear_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_12dp"
            android:layout_marginEnd="@dimen/std_12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/search_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/std_4dp"
                android:lineSpacingExtra="3sp"
                android:paddingRight="5dp"
                android:text="@string/lbl_search_gender"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@null"
                android:textSize="@dimen/std_16sp" />

            <LinearLayout
                android:id="@+id/shareiconLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@null"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/std_28dp"
                    android:layout_height="@dimen/std_28dp"
                    android:src="@drawable/prescription_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dm_sans"
                    android:paddingRight="5dp"
                    android:text="@string/lbl_share"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/shareImgBtn"
                android:layout_width="@dimen/std_60dp"
                android:layout_height="@dimen/std_20dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/std_12dp"
                android:background="@null"
                android:src="@drawable/share_presc_icon"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>