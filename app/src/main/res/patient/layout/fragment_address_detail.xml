<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="addressInfo"
            type="org.intelehealth.data.offline.entity.PersonAddress" />

        <variable
            name="addressConfig"
            type="org.intelehealth.config.presenter.fields.patient.infoconfig.AddressInfoConfig" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/std_8dp"
        app:cardElevation="@dimen/std_2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblAddressInfo"
                style="@style/Theme.IDA.TextAppearance.Person.Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item"
                android:drawablePadding="@dimen/std_16dp"
                android:gravity="center_vertical"
                android:padding="@dimen/std_8dp"
                android:text="@string/lbl_address_identification"
                app:drawableEndCompat="@drawable/selector_dropdown_arrow_rotate"
                app:drawableStartCompat="@drawable/ic_address_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupAddressSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="vAddressSectionDivider, lblAddressSectionDetail, btnEditAddressInfo, tblAddressInfo" />

            <View
                android:id="@+id/vAddressSectionDivider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/std_1dp"
                android:layout_marginHorizontal="@dimen/std_8dp"
                android:background="@color/colorLightGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblAddressInfo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lblAddressSectionDetail"
                style="@style/Theme.IDA.TextAppearance.Primary.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/std_8dp"
                android:textStyle="bold"
                android:text="@string/lbl_details"
                app:layout_constraintBottom_toBottomOf="@id/btnEditAddressInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnEditAddressInfo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditAddressInfo"
                style="@style/Theme.IDA.TextButton.Edit.Small"
                android:layout_width="@dimen/std_72dp"
                android:layout_height="@dimen/std_24dp"
                android:layout_marginTop="@dimen/std_16dp"
                android:layout_marginEnd="@dimen/std_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vAddressSectionDivider" />

            <TableLayout
                android:id="@+id/tblAddressInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/std_8dp"
                android:padding="@dimen/std_8dp"
                android:shrinkColumns="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnEditAddressInfo">

                <!-- Postal Code -->
                <TableRow
                    android:id="@+id/trPostalCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{addressConfig.postalCode.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblPostalCode"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_postal_code + `:`}"
                        tools:text="@string/lbl_postal_code" />

                    <TextView
                        android:id="@+id/tvPostalCode"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:text="@{addressInfo.postalCode}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="360575" />
                </TableRow>

                <!-- Country -->
                <TableRow
                    android:id="@+id/trCountry"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.country.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblCountry"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_country + `:`}"
                        tools:text="@string/lbl_country" />

                    <TextView
                        android:id="@+id/tvCountry"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:text="@{addressInfo.country}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="India" />
                </TableRow>

                <!-- State Or Province -->
                <TableRow
                    android:id="@+id/trStateOrProvince"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.state.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblStateOrProvince"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_state + `:`}"
                        tools:text="@string/lbl_state" />

                    <TextView
                        android:id="@+id/tvStateOrProvince"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:text="@{addressInfo.state}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="Gujarat" />
                </TableRow>

                <!-- District -->
                <TableRow
                    android:id="@+id/trDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.district.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblDistrict"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_district + `:`}"
                        tools:text="@string/lbl_district" />

                    <TextView
                        android:id="@+id/tvDistrict"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:text="@{addressInfo.district}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="Porbandar" />
                </TableRow>

                <!-- Block -->
                <TableRow
                    android:id="@+id/trBlock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.block.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblBlock"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_block + `:`}"
                        tools:text="@string/lbl_block" />

                    <TextView
                        android:id="@+id/tvBlock"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="Block" />
                </TableRow>

                <!-- Gram Panchayat -->
                <TableRow
                    android:id="@+id/trGramPanchayat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.block.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblGramPanchayat"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_gram_panchayat + `:`}"
                        tools:text="@string/lbl_gram_panchayat" />

                    <TextView
                        android:id="@+id/tvGramPanchayat"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="Kuchhadi" />
                </TableRow>

                <!-- Village/Town/City -->
                <TableRow
                    android:id="@+id/trVillageOrTownOrCity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.cityVillage.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblVillageOrTownOrCity"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_city + `:`}"
                        tools:text="@string/lbl_city" />

                    <TextView
                        android:id="@+id/tvVillageOrTownOrCity"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="Porbandar" />
                </TableRow>

                <!-- Registration address of Health Facility -->
                <TableRow
                    android:id="@+id/trRegistrationAddressOfHf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.registrationAddressOfHf.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblRegistrationAddressOfHf"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/hint_registration_address_of_health_facility + `:`}"
                        tools:text="@string/hint_registration_address_of_health_facility" />

                    <TextView
                        android:id="@+id/tvRegistrationAddressOfHf"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:text="@{addressInfo.addressOfHf}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="@string/hint_registration_address_of_health_facility" />
                </TableRow>

                <!-- Household Number -->
                <TableRow
                    android:id="@+id/trHounseholdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.householdNumber.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblHounseholdNumber"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_household_no + `:`}"
                        tools:text="@string/lbl_household_no" />

                    <TextView
                        android:id="@+id/tvHounseholdNumber"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:text="@{addressInfo.address6}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="543210" />
                </TableRow>

                <!-- Corresponding Address1 -->
                <TableRow
                    android:id="@+id/trCorrespondingAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.address1.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblCorrespondingAddress1"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_corresponding_address_1 + `:`}"
                        tools:text="@string/lbl_corresponding_address_1" />

                    <TextView
                        android:id="@+id/tvCorrespondingAddress1"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:text="@{addressInfo.address1}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="@string/lbl_corresponding_address_1" />
                </TableRow>

                <!-- Corresponding Address2 -->
                <TableRow
                    android:id="@+id/trCorrespondingAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/std_4dp"
                    android:visibility="@{addressConfig.address2.enabled ? View.VISIBLE : View.GONE}"
                    android:weightSum="2"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/lblCorrespondingAddress2"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{@string/lbl_corresponding_address_2 + `:`}"
                        tools:text="@string/lbl_corresponding_address_2" />

                    <TextView
                        android:id="@+id/tvCorrespondingAddress2"
                        style="@style/Theme.IDA.TextAppearance.Label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:placeholder="@{@string/content_not_provided}"
                        android:text="@{addressInfo.address2}"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="@string/lbl_corresponding_address_2" />
                </TableRow>

            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
