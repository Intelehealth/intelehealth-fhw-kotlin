<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/colorBG"
        android:layout_height="match_parent">

        <include
            android:id="@+id/contentConsentView"
            layout="@layout/content_view_consent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btnConsentAccept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConsentAccept"
            style="@style/Theme.IDA.Button.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/std_16dp"
            android:layout_marginStart="@dimen/std_8dp"
            android:layout_marginEnd="@dimen/std_16dp"
            android:text="@string/action_accept"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnConsentDecline" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConsentDecline"
            style="@style/Theme.IDA.Button.Tertiary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_16dp"
            android:layout_marginEnd="@dimen/std_8dp"
            android:text="@string/action_decline"
            app:layout_constraintBottom_toBottomOf="@id/btnConsentAccept"
            app:layout_constraintEnd_toStartOf="@id/btnConsentAccept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnConsentAccept" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
