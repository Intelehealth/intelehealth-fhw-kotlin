<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        <View-->
        <!--            android:id="@+id/viewSearchBox"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="?actionBarSize"-->
        <!--            android:background="@color/colorPrimary"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <View
            android:id="@+id/viewSearchBoxBottomShape"
            android:layout_width="match_parent"
            android:layout_height="@dimen/std_32dp"
            android:background="@drawable/shap_find_patient_search_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblPreviouslySearchList"
            style="@style/Theme.IDA.TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_16dp"
            android:layout_marginTop="@dimen/std_16dp"
            android:text="@string/lbl_previous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewSearchBoxBottomShape" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPreviouslySearchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/std_8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblPreviouslySearchList"
            tools:itemCount="5"
            tools:listitem="@layout/list_row_item_prev_search" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPatientList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/std_16dp"
            tools:listitem="@layout/list_row_item_patient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvPreviouslySearchList" />

        <include
            android:id="@+id/progressView"
            layout="@layout/view_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
