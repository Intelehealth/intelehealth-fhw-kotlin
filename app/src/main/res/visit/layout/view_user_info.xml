<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/std_8dp"
        app:cardElevation="@dimen/std_2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/std_16dp">

            <!-- Profile Image Card -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sivProfileImage"
                android:layout_width="@dimen/std_40dp"
                android:layout_height="@dimen/std_40dp"
                android:contentDescription="@string/lbl_profile_image"
                android:src="@drawable/img_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <!-- Patient Name and Priority -->
            <TextView
                android:id="@+id/tvPatientName"
                style="@style/Theme.IDA.TextAppearance.Person.Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_8dp"
                android:ellipsize="end"
                android:maxLength="@integer/max_name_length"
                android:maxLines="1"
                android:text="@string/lbl_dummy_name"
                app:layout_constraintStart_toEndOf="@id/sivProfileImage"
                app:layout_constraintTop_toTopOf="@id/sivProfileImage"
                tools:text="Anthony Gonsalves" />

            <!-- Calendar and Date -->
            <TextView
                android:id="@+id/tvPatientOpenMrsId"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_8dp"
                android:layout_marginTop="@dimen/std_4dp"
                android:drawablePadding="@dimen/std_8dp"
                android:gravity="center"
                android:text="@string/lbl_openmrs_id"
                app:layout_constraintStart_toEndOf="@id/sivProfileImage"
                app:layout_constraintTop_toBottomOf="@id/tvPatientName"
                tools:text="ID-987654jK" />

            <TextView
                android:id="@+id/tvPersonGender"
                style="@style/Theme.IDA.TextAppearance.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/std_8dp"
                android:drawablePadding="@dimen/std_4dp"
                android:visibility="visible"
                app:drawableEndCompat="@drawable/ic_patient_edit"
                app:layout_constraintBottom_toBottomOf="@id/tvPatientName"
                app:layout_constraintStart_toEndOf="@id/tvPatientName"
                app:layout_constraintTop_toTopOf="@id/tvPatientName"
                tools:ignore="RtlSymmetry"
                tools:text="M 22" />

            <ImageView
                android:id="@+id/ivCallButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/std_16dp"
                android:background="@drawable/bg_ripple_icon"
                android:contentDescription="@string/lbl_call"
                android:src="@drawable/ic_phone"
                app:layout_constraintBottom_toBottomOf="@id/tvPatientOpenMrsId"
                app:layout_constraintEnd_toStartOf="@id/ivWhatsappButton"
                app:layout_constraintTop_toTopOf="@id/tvPatientOpenMrsId" />

            <ImageView
                android:id="@+id/ivWhatsappButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ripple_icon"
                android:contentDescription="@string/lbl_call"
                android:src="@drawable/ic_whatsapp"
                app:layout_constraintBottom_toBottomOf="@id/tvPatientOpenMrsId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvPatientOpenMrsId" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
