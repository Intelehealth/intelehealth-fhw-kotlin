<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="patientDetail"
            type="org.intelehealth.data.offline.entity.VisitDetail" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/std_8dp"
        app:cardElevation="@dimen/std_2dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--User Info View-->
            <include
                android:id="@+id/patientInfo"
                layout="@layout/view_patient_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintEnd_toStartOf="@id/ivCallButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:patientDetail="@{patientDetail}" />

            <ImageView
                android:id="@+id/ivCallButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/std_16dp"
                android:background="@drawable/bg_ripple_icon"
                android:contentDescription="@string/lbl_call"
                android:src="@drawable/ic_phone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ivWhatsappButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivWhatsappButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/std_16dp"
                android:background="@drawable/bg_ripple_icon"
                android:contentDescription="@string/lbl_call"
                android:src="@drawable/ic_whatsapp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
