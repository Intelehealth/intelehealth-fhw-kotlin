<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewHead"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="@dimen/std_4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_16dp">

        <!-- Profile CardView -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUserProfile"
            android:layout_width="@dimen/std_40dp"
            android:layout_height="@dimen/std_40dp"
            app:cardCornerRadius="@dimen/std_16dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_avatar"
                android:contentDescription="@string/lbl_profile_image"
                />
        </com.google.android.material.card.MaterialCardView>

        <!-- Patient Name -->
        <TextView
            android:id="@+id/patNameTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_16dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/lbl_dummy_name"
            app:layout_constraintWidth_percent=".4"
            style="@style/TextAppearance.Material3.TitleMedium"
            app:layout_constraintStart_toEndOf="@id/cardUserProfile"
            app:layout_constraintTop_toTopOf="@id/cardUserProfile" />

        <!-- Gender and Age -->
        <TextView
            android:id="@+id/genderAgeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_4dp"
            android:gravity="center_vertical"
            android:text="@string/lbl_gender_with_age"
            android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
            android:textSize="@dimen/std_16sp"
            app:layout_constraintStart_toEndOf="@id/patNameTxt"
            app:layout_constraintTop_toTopOf="@id/patNameTxt"
            tools:text="@string/lbl_gender_with_age" />

        <!-- Edit Icon -->
        <ImageView
            android:id="@+id/editPatientInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_4dp"
            android:padding="@dimen/std_4dp"
            android:src="@drawable/ic_patient_edit"
            app:layout_constraintStart_toEndOf="@id/genderAgeTxt"
            app:layout_constraintTop_toTopOf="@id/patNameTxt"
            android:contentDescription="@string/lbl_edit"
            />

        <!-- OpenMRS ID -->
        <TextView
            android:id="@+id/openmrsIdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_4dp"
            android:gravity="center_vertical"
            android:text="@string/lbl_openmrs_id"
            android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
            android:textSize="@dimen/std_14sp"
            app:layout_constraintStart_toStartOf="@id/patNameTxt"
            app:layout_constraintTop_toBottomOf="@id/patNameTxt"
            />

        <!-- Call Button -->
        <ImageButton
            android:id="@+id/patCallBtn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="@dimen/std_16dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_phone"
            app:layout_constraintBottom_toBottomOf="@id/cardUserProfile"
            app:layout_constraintEnd_toStartOf="@id/patWhatsappBtn"
            android:contentDescription="@string/lbl_call"/>

        <!-- WhatsApp Button -->
        <ImageButton
            android:id="@+id/patWhatsappBtn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_whatsapp"
            app:layout_constraintBottom_toBottomOf="@id/cardUserProfile"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/lbl_whatsapp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
