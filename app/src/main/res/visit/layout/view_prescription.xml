<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="presDetail"
            type="org.intelehealth.data.offline.entity.VisitDetail" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prescriptionBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:visibility="visible">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPrescriptionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_item"
            android:paddingVertical="@dimen/std_16dp"
            app:layout_constraintBottom_toTopOf="@id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!-- Prescription Icon -->
            <ImageView
                android:id="@+id/iconPrescDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/lbl_prescription"
                android:src="@drawable/ic_circle_prescription"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Title Text -->
            <TextView
                android:id="@+id/visitDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_8dp"
                android:gravity="center_vertical"
                android:text="@string/lbl_prescription"
                android:textAppearance="@style/Theme.IDA.TextAppearance.Person.Name"
                app:layout_constraintStart_toEndOf="@id/iconPrescDetails"
                app:layout_constraintTop_toTopOf="@id/iconPrescDetails" />

            <!-- Sub Text (prescription time) -->
            <TextView
                android:id="@+id/prescTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@{presDetail.hasPrescription ? @string/content_prescription_received(presDetail.prescribedDate) : @string/content_prescription_pending(presDetail.prescribedDate)}"
                android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
                android:textColor="@color/green_button_bg"
                app:layout_constraintStart_toStartOf="@id/visitDetailsText"
                app:layout_constraintTop_toBottomOf="@id/visitDetailsText"
                tools:text="@string/content_prescription_received" />

            <!-- Arrow Button -->
            <ImageView
                android:id="@+id/prescArrowRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/lbl_next_arrow"
                android:src="@drawable/ic_cupertino_arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/iconPrescDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iconPrescDetails" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupPrescriptionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="divider, cancelBtn, btnRemindDoctor" />

        <!-- Divider Below Prescription -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorLightGray"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clPrescriptionDetails"
            tools:visibility="visible" />

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelBtn"
            style="@style/Theme.IDA.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_16dp"
            android:layout_marginEnd="@dimen/std_8dp"
            android:layout_marginBottom="@dimen/std_16dp"
            android:backgroundTint="@color/light_red"
            android:text="@string/action_cancel"
            android:textColor="@color/red"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnRemindDoctor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:visibility="visible" />

        <!-- Remind Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemindDoctor"
            style="@style/Theme.IDA.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/std_8dp"
            android:text="@string/lbl_remind_doctor"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/cancelBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancelBtn"
            app:layout_constraintTop_toTopOf="@id/cancelBtn"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
