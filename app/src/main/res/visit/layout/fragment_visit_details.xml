<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@drawable/frame_10021">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <!--User Info View-->
                <include
                    android:id="@+id/userInfoView"
                    layout="@layout/view_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/std_12dp"
                    android:layout_marginEnd="@dimen/std_12dp"
                    android:layout_marginTop="@dimen/std_12dp"
                    />

                <androidx.cardview.widget.CardView
                    android:id="@+id/detailsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/userInfoView"
                    android:layout_marginLeft="@dimen/std_12dp"
                    android:layout_marginTop="@dimen/std_24dp"
                    android:layout_marginRight="@dimen/std_12dp"
                    android:layout_marginBottom="@dimen/std_12dp"
                    android:elevation="@dimen/std_16dp"
                    app:cardCornerRadius="@dimen/std_5dp"
                    app:cardElevation="@dimen/std_5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/std_16dp">

                        <!--Complaint Info View-->
                        <include
                            android:id="@+id/complaintView"
                            layout="@layout/view_complaint_and_datetime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--General Physician View-->
                        <include
                            android:id="@+id/generalPhView"
                            layout="@layout/view_general_ph"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/complaintView" />


                        <!--Visit Summary View-->
                        <include
                            android:id="@+id/visitSummaryView"
                            layout="@layout/view_visit_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/generalPhView" />

                       <!--Prescription View-->
                        <include
                            android:id="@+id/prescriptionView"
                            layout="@layout/view_prescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/visitSummaryView" />

                        <!--Follow up view-->
                        <include
                            android:id="@+id/followUpView"
                            layout="@layout/view_follow_up_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/std_12dp"
                            android:layout_marginStart="@dimen/std_12dp"
                            android:layout_marginEnd="12dp"
                            app:layout_constraintTop_toBottomOf="@id/prescriptionView" />


                        <!-- End Visit Button-->
                        <include
                            layout="@layout/view_end_visit_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/followUpView" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Past Visit Layout-->
                <include
                    layout="@layout/view_past_visit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/std_12dp"
                    android:layout_marginEnd="@dimen/std_12dp"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:layout_marginBottom="@dimen/std_12dp"
                    android:paddingBottom="@dimen/std_12dp"
                    app:layout_constraintTop_toBottomOf="@+id/detailsCard"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <!--Call Fab-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/std_10dp"
            android:layout_marginBottom="@dimen/std_10dp"
            android:contentDescription="@string/content_chat_fab"
            android:src="@drawable/icons8_video_call"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/floatingActionButton"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />


        <!--Char Fab-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/content_chat_fab"
            android:layout_marginRight="@dimen/std_10dp"
            android:layout_marginBottom="@dimen/std_10dp"
            android:src="@drawable/icons8_chat_new"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>