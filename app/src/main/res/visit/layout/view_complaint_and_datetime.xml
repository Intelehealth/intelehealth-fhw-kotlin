<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="visitDetail"
            type="org.intelehealth.data.offline.entity.VisitDetail" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Chief Complaint -->
        <TextView
            android:id="@+id/tvChiefComplaint"
            style="@style/Theme.IDA.TextAppearance.Person.Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4dp"
            android:text="Test Fever"
            app:layout_constraintEnd_toStartOf="@+id/tvPriorityTag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Test Fever" />

        <!-- Priority Tag -->
        <TextView
            android:id="@+id/tvPriorityTag"
            style="@style/Theme.IDA.Dark.TextAppearance.Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_priority"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="@string/title_priority"
            android:textAllCaps="true"
            android:textSize="@dimen/std_12sp"
            android:visibility="@{visitDetail.priority ? View.VISIBLE: View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Visit ID -->
        <TextView
            android:id="@+id/visitID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/lbl_visit_id(visitDetail.hiddenVisitId())}"
            android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
            android:textSize="@dimen/std_14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChiefComplaint"
            tools:text="@string/lbl_dummy_visit_id" />

        <!-- Progress Indicator -->
        <ImageView
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_16dp"
            android:contentDescription="@string/lbl_progressIndicator"
            android:src="@drawable/ic_details_progress_indic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/visitID" />

        <!-- Date and Calendar Section -->
        <TextView
            android:id="@+id/visit_startDate"
            style="@style/Theme.IDA.TextAppearance.Primary.Label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/std_16dp"
            android:drawablePadding="@dimen/std_4dp"
            android:gravity="center_vertical"
            android:text="@{visitDetail.visitDate}"
            tools:text="@string/lbl_details_date"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/progressIndicator"
            app:layout_constraintTop_toBottomOf="@+id/progressIndicator" />

        <!-- Time Section -->
        <TextView
            android:id="@+id/visit_startTime"
            style="@style/Theme.IDA.TextAppearance.Primary.Label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/std_16dp"
            android:drawablePadding="@dimen/std_4dp"
            android:gravity="center_vertical"
            tools:text="@string/lbl_dummy_time"
            android:text="@{visitDetail.visitTime}"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_time"
            app:drawableTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/visit_startDate"
            app:layout_constraintStart_toEndOf="@id/visit_startDate"
            app:layout_constraintTop_toTopOf="@+id/visit_startDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
