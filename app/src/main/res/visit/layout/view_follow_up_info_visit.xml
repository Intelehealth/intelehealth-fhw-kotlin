<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:visibility="visible">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/std_1dp"
        android:layout_marginBottom="@dimen/std_16dp"
        android:background="@color/colorLightGray"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/followupDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="@dimen/std_16dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:text="@string/lbl_card_item_date"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />


    <TextView
        android:id="@+id/followup_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_4dp"
        android:gravity="center_vertical"
        android:text="@string/content_followup_info"
        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
        android:textColor="@null"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/followupDateTv" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/followup_info"
        android:layout_marginTop="@dimen/std_16dp"
        android:layout_marginBottom="@dimen/std_16dp"
        android:background="@drawable/ic_followup_enabled"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/followup_info" />

    <TextView
        android:id="@+id/followup_accept_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_8dp"
        android:layout_marginBottom="@dimen/std_16dp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/std_16dp"
        android:text="@string/content_followup_visit_info"
        android:textAppearance="@style/Theme.IDA.TextAppearance.Label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button" />


    <com.google.android.material.button.MaterialButton
        style="@style/Theme.IDA.Button.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_16dp"
        android:layout_marginBottom="@dimen/std_16dp"
        android:padding="@dimen/std_16dp"
        android:text="@string/action_no"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followup_accept_text"
        app:layout_constraintWidth_percent=".48" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/yes_followup_btn"
        style="@style/Theme.IDA.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_16dp"
        android:layout_marginBottom="@dimen/std_16dp"
        android:padding="@dimen/std_16dp"
        android:text="@string/action_yes"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followup_accept_text"
        app:layout_constraintWidth_percent=".48" />

</androidx.constraintlayout.widget.ConstraintLayout>