<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IDA.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/std_16sp</item>
        <item name="cornerRadius">@dimen/std_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">@dimen/std_8dp</item>
    </style>

    <style name="Theme.IDA.Button.Primary" parent="Theme.IDA.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/selector_btn_color_primary</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="Theme.IDA.Button.Secondary" parent="Theme.IDA.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/selector_btn_color_secondary</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeColor">@color/colorBorder</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.IDA.Button.Tertiary" parent="Theme.IDA.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">@color/colorPrimaryLightCard</item>
        <item name="strokeColor">@color/colorBorder</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.IDA.Button.Next" parent="Theme.IDA.Button.Primary">
        <item name="iconGravity">end</item>
        <item name="icon">@drawable/ic_arrow_next</item>
    </style>

    <style name="Theme.IDA.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/std_16sp</item>
        <item name="cornerRadius">@dimen/std_8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">@dimen/std_8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Theme.IDA.TextButton.Help" parent="Theme.IDA.TextButton">
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
        <item name="android:text">@string/action_help</item>
    </style>

    <style name="Theme.IDA.TextButton.AppReset" parent="Theme.IDA.TextButton">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:text">@string/action_reset_app_new</item>
        <item name="android:textSize">@dimen/std_14sp</item>
        <item name="icon">@drawable/ic_sync</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/red</item>
        <item name="iconPadding">@dimen/std_16dp</item>
    </style>

    <style name="Theme.IDA.SearchButton" parent="Theme.IDA.TextButton">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/std_14sp</item>
        <item name="icon">@drawable/ic_search</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">@dimen/std_16dp</item>
        <item name="rippleColor">@color/black</item>
        <item name="strokeColor">@color/colorBorder</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.IDA.SearchButton.Hint" parent="Theme.IDA.SearchButton">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>
</resources>