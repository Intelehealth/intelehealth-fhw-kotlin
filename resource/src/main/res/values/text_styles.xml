<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IDA.TextAppearance.Primary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/dm_sans</item>
    </style>

    <style name="Theme.IDA.TextAppearance.Secondary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/dm_sans</item>
    </style>

    <style name="Theme.IDA.Dark.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/dm_sans</item>
    </style>

    <style name="Theme.IDA.TextAppearance.ScreenTitle" parent="Theme.IDA.TextAppearance.Primary">
        <item name="android:textSize">@dimen/std_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.IDA.TextAppearance.Label" parent="Theme.IDA.TextAppearance.Secondary">
        <item name="android:textSize">@dimen/std_14sp</item>
    </style>

    <style name="Theme.IDA.TextAppearance.Primary.Label" parent="Theme.IDA.TextAppearance.Primary">
        <item name="android:textSize">@dimen/std_14sp</item>
    </style>

    <style name="Theme.IDA.TextAppearance.InputBox" parent="Theme.IDA.TextAppearance.Primary">
        <item name="android:textSize">@dimen/std_16sp</item>
    </style>

    <style name="Theme.IDA.TextAppearance.Tab" parent="Theme.IDA.TextAppearance.Primary">
        <item name="android:textSize">@dimen/std_14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.IDA.Dark.TextAppearance.Heading1.Bold" parent="Theme.IDA.Dark.TextAppearance">
        <item name="android:textSize">@dimen/std_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.IDA.TextAppearance.Heading1.Bold" parent="Theme.IDA.TextAppearance.Primary">
        <item name="android:textSize">@dimen/std_24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.IDA.Dark.TextAppearance.Body" parent="Theme.IDA.Dark.TextAppearance">
        <item name="android:textSize">@dimen/std_18sp</item>
    </style>

    <style name="Theme.IDA.TextAppearance.Body" parent="Theme.IDA.TextAppearance.Primary">
        <item name="android:textSize">@dimen/std_18sp</item>
    </style>

    <style name="Theme.IDA.TextAppearance.Secondary.Medium" parent="Theme.IDA.TextAppearance.Secondary">
        <item name="android:textSize">@dimen/std_16sp</item>
    </style>

    <style name="Theme.IDA.TextAppearance.Score" parent="Theme.IDA.TextAppearance.Primary">
        <item name="android:textSize">@dimen/std_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
