<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/std_12dp"
    android:paddingEnd="@dimen/std_12dp"
    android:paddingTop="@dimen/std_16dp"
    android:paddingBottom="@dimen/std_16dp">

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/std_16dp"/>

    <!-- General Physician Layout -->
    <!-- 1st Section (Profile + Texts) -->

        <ImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/std_48dp"
            android:layout_height="@dimen/std_48dp"
            android:layout_marginTop="@dimen/std_16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            android:src="@drawable/ic_grp_general_phys"
            android:background="@null" />


    <TextView
        android:id="@+id/visitSpeciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/std_10dp"
        android:lineSpacingExtra="-3sp"
        android:text="@string/lbl_gp_txt"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/std_16sp"
        app:layout_constraintStart_toEndOf="@+id/profile"
        app:layout_constraintTop_toTopOf="@+id/profile" />

    <TextView
        android:id="@+id/drSpeciality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_dr_speciality"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/std_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile"
        app:layout_constraintStart_toStartOf="@+id/visitSpeciality"
        app:layout_constraintTop_toBottomOf="@+id/visitSpeciality" />


    <ImageView
        android:id="@+id/drCallBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_baseline_lens_24_light"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_videocam_24"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/drWhatsappBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/drWhatsappBtn"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/drWhatsappBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_baseline_lens_24_light"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_chat_24"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/drSpeciality"
        app:layout_constraintEnd_toStartOf="@+id/drCallBtn"
        app:layout_constraintTop_toTopOf="@+id/visitSpeciality" />


    <!-- Divider 2 -->
    <View
        android:id="@+id/divider_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/std_16dp"
        android:background="@color/colorLightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile" />

</androidx.constraintlayout.widget.ConstraintLayout>
