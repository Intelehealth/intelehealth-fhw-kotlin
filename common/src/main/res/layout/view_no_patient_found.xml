<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="contentMessage"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/search_bg_icon"
            android:layout_width="@dimen/std_128dp"
            android:layout_height="@dimen/std_128dp"
            android:contentDescription="@string/content_search_icon"
            android:src="@drawable/ic_search_icon_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_pat_not_found_txt"
            style="@style/Theme.IDA.TextAppearance.Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_24dp"
            android:text="@{title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bg_icon"
            tools:text="@string/error_search_pat_not_found_txt" />

        <TextView
            android:id="@+id/search_pat_hint_txt"
            style="@style/Theme.IDA.TextAppearance.Secondary.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/std_40dp"
            android:layout_marginTop="@dimen/std_16dp"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="3sp"
            android:text="@{contentMessage}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_pat_not_found_txt"
            tools:text="@string/hint_search_pat_txt" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddNewPatient"
            style="@style/Theme.IDA.Button.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/std_16dp"
            android:text="@string/title_add_new_patient"
            app:icon="@drawable/img_user_plus"
            app:iconGravity="start"
            app:iconPadding="@dimen/std_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_pat_hint_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
