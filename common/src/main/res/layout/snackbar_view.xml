<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="msgFor"
            type="String" />

        <variable
            name="icon"
            type="Integer" />

        <variable
            name="message"
            type="String" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/std_8dp"
        app:cardElevation="@dimen/std_4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clSnackbarRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/std_16dp">

            <ImageView
                android:id="@+id/ivSnackbarIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:contentDescription="@{msgFor}"
                android:icon="@{icon}"
                android:src="@drawable/ic_success"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSnackbarMessage"
                style="@style/Theme.IDA.TextAppearance.Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/std_16dp"
                android:text="@{message}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivSnackbarIcon"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Thank you for your feedback" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>